@using MyShop.Core.Utilities.Convertors
@model MyShop.Core.ViewModels.Users.InformationUserViewModel
@{
    ViewData["Title"] = "حذف کاربر";
}

<div class="col-md-12">
    <div class="box box-solid">
        <div class="box-header with-border">
            <i class="fa fa-user-times"></i>

            <h3 class="box-title">حذف کاربر</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <form method="post">
                <input type="hidden" name="UserId" value="@ViewData["UserId"].ToString()" />

                <dl class="dl-horizontal">
                    <dt>نام کاربری :</dt>
                    <dd>@Model.UserName</dd>
                    <dt>ایمیل :</dt>
                    <dd>@Model.Email</dd>
                    <dt>موجودی کیف پول</dt>
                    <dd>@Model.Wallet</dd>
                    <dt>تاریخ عضویت :</dt>
                    <dd>@Model.CreateDate.ToShamsi()</dd>
                    <dt></dt>
                    <br />
                    <dd>
                        <input type="submit" value="حذف" class="btn btn-danger"/>
                    </dd>
                </dl>

            </form>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>

