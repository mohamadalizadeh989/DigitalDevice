@using MyShop.Core.Services
@using MyShop.Core.Utilities.Convertors
@using MyShop.Core.ViewModels.Users
@inject IAccountService _accountService

@{
    SideBarUserPanelViewModel user = await _accountService.GetSideBarUserPanelDataAsync(User.Identity.Name);
}
<head>
    <partial name="_Styles" />

</head>

<div class="profile-user-page col-xl-3 col-lg-4 col-md-12 center-section order-1">
    <div class="profile-box">
        <div class="profile-box-header">
            <div class="profile-box-avatar">
                <img  src="/UserAvatar/@user.ImageName" alt="User profile picture">
            </div>
           
        </div>
        <div class="profile-box-username">@user.UserName</div>

        <p class="text-muted text-center">تاریخ عضویت : @user.CreateDate.ToShamsi()</p>
        
        <div class="profile-box-tabs">
            <a asp-controller="Home" asp-action="ChangePassword" class="profile-box-tab profile-box-tab-access">
                <i class="now-ui-icons ui-1_lock-circle-open"></i>
                تغییر رمز
            </a>
            <a asp-controller="Account" asp-action="LogoutAsync" class="profile-box-tab profile-box-tab--sign-out">
                <i class="now-ui-icons media-1_button-power"></i>
                خروج از حساب
            </a>
        </div>
    </div>
    <div class="responsive-profile-menu show-md">
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-navicon"></i>
                حساب کاربری شما
            </button>
            <div class="dropdown-menu dropdown-menu-right text-right">
                <a asp-controller="UserPanel" asp-action="" asp-area="" class="dropdown-item active-menu">
                    <i class="now-ui-icons users_single-02"></i>
                    مشاهده حساب کاربری
                </a>
                <a href="/UserPanel/EditProfile" class="dropdown-item">
                    <i class="now-ui-icons shopping_basket"></i>
                    ویرایش حساب کاربری
                </a>
                <a href="/UserPanel/Wallet" class="dropdown-item">
                    <i class="now-ui-icons files_single-copy-04"></i>
                    کیف پول شما
                </a>
                <a href="#" class="dropdown-item">
                    <i class="now-ui-icons files_single-copy-04"></i>
                    تنظیمات حساب کاربری
                </a>
                <a href="#" class="dropdown-item">
                    <i class="now-ui-icons business_badge"></i>
                    محصولات خریداری شده
                </a>
                @if (user.Email == "mohamadalizadeh989@gmail.com")
                    {
                        <a href="/Admin" class="dropdown-item">
                            <i class="now-ui-icons files_single-copy-04"></i>
                            ورود به پنل ادمین
                        </a>
                    }
            </div>
        </div>
    </div>
    <div class="profile-menu hidden-md">
        <div class="profile-menu-header">حساب کاربری شما</div>
        <ul class="profile-menu-items">
            <li>
                <a asp-controller="UserPanel" asp-action="" asp-area="" class="active">
                    <i class="now-ui-icons users_single-02"></i>
                    مشاهده حساب کاربری
                </a>
            </li>
            <li>
                <a href="/UserPanel/EditProfile">
                    <i class="now-ui-icons shopping_basket"></i>
                    ویرایش حساب کاربری
                </a>
            </li>
            <li>
                <a href="/UserPanel/Wallet">
                    <i class="now-ui-icons files_single-copy-04"></i>
                    کیف پول شما
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="now-ui-icons files_single-copy-04"></i>
                    تنظیمات حساب کاربری
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="now-ui-icons business_badge"></i>
                    محصولات خریداری شده
                </a>
            </li>
            <li>
                @if (user.Email == "mohamadalizadeh989@gmail.com")
                {
                    <a asp-controller="Home" asp-action="Index" asp-area="Admin">
                        <i class="now-ui-icons business_badge"></i>
                        ورود به پنل ادمین
                    </a>
                }
            </li>

        </ul>
    </div>
</div>