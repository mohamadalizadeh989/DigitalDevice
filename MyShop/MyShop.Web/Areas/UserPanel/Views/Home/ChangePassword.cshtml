@model MyShop.Core.ViewModels.Users.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="">دیجیتال دیوایس</a></li>
            <li class="breadcrumb-item active" aria-current="page"> @ViewData["Title"] </li>
        </ul>
    </nav>
</div>


<main class="profile-user-page default">
    <div class="container">
        <div class="row">

            <div class="profile-page col-xl-9 col-lg-8 col-md-12 order-4">
                <div class="row">
                    <div class="col-8">
                        <div class="profile-menu hidden-md">

                            <div class="container-fluid">
                                <h1 class="account-box-title">ویرایش کلمه عبور</h1>
                            </div>
                            <div class="account-box-content">

                                <form class="form-account" asp-action="ChangePassword" method="post" asp-antiforgery="true">

                                    @if (ViewBag.IsSuccess != null)
                                    {
                                        <div>
                                            <p class="alert alert-info col-12 col-md-1 col-lg-11 mx-auto text-center">ویرایش کلمه عبور شما با موفقیت انجام شد</p>
                                        </div>

                                        <script>
                                            // Your delay in milliseconds
                                            var delay = 3000;
                                            setTimeout(function () { window.location = "https://localhost:44351/"; }, delay);
                                        </script>
                                    }


                                    <div class="row">
                                        <div class="col-md-12 col-lg-12 col-xl-12">
                                            <div class="form-account-title">کلمه عبور فعلی</div>
                                            <div class="form-account-row">
                                                <label class="input-label">
                                                    <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                                </label>
                                                <input asp-for="OldPassword" class="input-field" type="password">
                                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                                            </div>
                                            <br />
                                            <br />
                                        </div>


                                        <div class="col-md-12 col-lg-12 col-xl-6">
                                            <div class="form-account-title">کلمه عبور جدید</div>
                                            <div class="form-account-row">
                                                <label class="input-label">
                                                    <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                                </label>
                                                <input asp-for="Password" class="input-field" type="password">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>


                                        <div class="col-md-12 col-lg-12 col-xl-6">
                                            <div class="form-account-title">تکرار کلمه عبور جدید</div>
                                            <div class="form-account-row">
                                                <label class="input-label">
                                                    <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                                </label>
                                                <input asp-for="RePassword" class="input-field" type="password">
                                                <span asp-validation-for="RePassword" class="text-danger"></span>
                                            </div>
                                            <br />
                                            <br />
                                            <br />
                                        </div>

                                        <div class="col-12 text-center">
                                            <button class="btn btn-info btn-lg">ذخیره</button>
                                            <button class="btn btn-default btn-lg">انصراف</button>
                                        </div>
                                    </div>
                                    <br />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <partial name="_SideBar" />
        </div>
    </div>
</main>

